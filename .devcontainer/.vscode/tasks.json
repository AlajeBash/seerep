{
    "version": "2.0.0",
    "tasks": [
		{
			"label": "catkin all",
			"type": "shell",
			"command": "catkin build",
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"absolute"
				]
			},
			"group": {
				"kind": "build"
			}
		},
		{
			"label": "catkin this",
			"type": "shell",
			"command": "cd ${fileDirname} && catkin build --this",
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"absolute"
				]
			},
			"group": {
				"kind": "build"
			}
		},
		{
			"label": "catkin this test",
			"type": "shell",
			"command": "cd ${fileDirname} && catkin run_tests --this",
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"absolute"
				]
			},
			"group": "build"
		},
		{
			"label": "catkin clean",
			"type": "shell",
			"command": "catkin clean"
		}
	]
}
